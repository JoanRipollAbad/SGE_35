<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Plantilla del informe -->
        <template id="liga_partido_report_template">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <div class="page">
                        <h2>Informe del Partido</h2>
                        <p><strong>Equipo Local:</strong> <t t-esc="doc.equipo_casa.nombre"/></p>
                        <p><strong>Equipo Visitante:</strong> <t t-esc="doc.equipo_fuera.nombre"/></p>
                        <p><strong>Goles Local:</strong> <t t-esc="doc.goles_casa"/></p>
                        <p><strong>Goles Visitante:</strong> <t t-esc="doc.goles_fuera"/></p>
                    </div>
                </t>
            </t>
        </template>

