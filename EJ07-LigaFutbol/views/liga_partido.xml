<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Definición de la acción de ventana para los partidos -->
    <record id="liga_partido_action" model="ir.actions.act_window">
        <field name="name">Partidos de la liga</field>
        <field name="res_model">liga.partido</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>

    <!-- Menú que accede a los partidos de la liga -->
    <menuitem name="Partidos de la liga" id="liga_partido_menu" parent="liga_base_menu" action="liga_partido_action" />

    <!-- VISTA DE FORMULARIO -->
    <record id="liga_partido_view_form" model="ir.ui.view">
        <field name="name">Formulario Partidos</field>
        <field name="model">liga.partido</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_sumar_dos_goles_casa" type="object" string="Sumar 2 goles a casa" class="btn-primary"/>
                    <button name="action_sumar_dos_goles_fuera" type="object" string="Sumar 2 Goles Visitantes" class="btn-primary" />
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="equipo_casa" />
                            <field name="goles_casa" />
                        </group>
                        <group>
                            <field name="equipo_fuera" />
                            <field name="goles_fuera" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista Tree -->
    <record id="liga_partido_view_tree" model="ir.ui.view">
        <field name="name">Lista de partidos de la liga</field>
        <field name="model">liga.partido</field>
        <field name="arch" type="xml">
            <tree>
            	<header>
                    <button name="%(EJ07-LigaFutbol.action_open_create_partido_wizard)d" 
                            type="action" 
                            string="Crear Nuevo Partido" 
                            class="btn-primary" />
                </header>
                <field name="equipo_casa" />
                <field name="goles_casa" />
                <field name="equipo_fuera" />
                <field name="goles_fuera" />
            </tree>
        </field>
    </record>

    <!-- Vista Kanban -->
    <record id="liga_partido_view_kanban" model="ir.ui.view">
        <field name="name">Lista de partidos de la liga</field>
        <field name="model">liga.partido</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="equipo_casa" />
                <field name="goles_casa" />
                <field name="equipo_fuera" />
                <field name="goles_fuera" />

                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="oe_kanban_card">
                                    <div class="text-muted">
                                        <b>
                                            <p>- Resultado -</p>
                                        </b>
                                    </div>
                                    <div >
                                        <field name="equipo_casa" /> :
                                        <field name="goles_casa" />
                                    </div>
                                </div>
                                <div>
                                    <field name="equipo_fuera" /> :
                                    <field name="goles_fuera" />
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>

            </kanban>
        </field>
    </record>
    
    <!-- Acción para el Wizard -->
    <record id="action_open_create_partido_wizard" model="ir.actions.act_window">
        <field name="name">Crear Nuevo Partido</field>
        <field name="res_model">liga.partido.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>


    <!-- Acción del reporte de Partido (Agregado aquí) -->
    <record id="action_liga_partido_report" model="ir.actions.report">
        <field name="name">Informe del Partido</field>
        <field name="model">liga.partido</field>
        <field name="report_name">liga_futbol.liga_partido_report_template</field>  <!-- Nombre de la plantilla -->
        <field name="report_type">qweb-pdf</field>
    </record>

</odoo>

